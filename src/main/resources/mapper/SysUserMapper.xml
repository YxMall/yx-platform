<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.smile.yx.platform.mapper.SysUserMapper">
    <select id="selectUserByName" resultType="com.smile.yx.platform.vo.UserVO">
        SELECT
        user_id,
        username,
        `password`,
        salt,
        email,
        mobile,
        `status`,
        create_user_id,
        create_time
        FROM
        sys_user
        <where>
            and username=#{username}
        </where>
    </select>
</mapper>